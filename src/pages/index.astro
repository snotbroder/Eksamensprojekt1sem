<style></style>

<style>
  /* ----- herosection ----- */
  .herosection {
    margin-left: -1rem;
    margin-right: -1rem;

    padding: 5rem 0.5rem 5rem 0.5rem;
    border-bottom: 1.5px var(--body-contrast) solid;
  }

  .herobottom {
    text-align: right;
  }
  .middle1,
  .middle2 {
    position: relative;
    height: 10rem;
    border: 1.5px var(--body-contrast) solid;
    padding: 1rem;
    margin-left: 2rem;
    margin-right: 5rem;
  }

  .middle1 {
    z-index: 10;
    background-color: var(--brandbackground);
  }
  .middle2 {
    top: -8rem;
    left: 3rem;
  }
  .heromiddle {
    height: 12rem;
  }
  .heromiddle hr {
    max-width: 6rem;
    margin: 0.5rem 0 0.5rem 0;
    border: 1px var(--body-contrast) solid;
  }

  .arrowcontainer {
    margin: auto;
    margin-top: 3rem;
    width: 4rem;
  }

  /* ----- type choice ----- */
  #type {
    margin-left: -1rem;
    margin-right: -1rem;
  }
  #type img {
    object-fit: cover;
    aspect-ratio: 1/1;
    border-bottom: 1.5px var(--body-contrast) solid;
  }
  .typewrapper {
    display: grid;
    text-decoration: none;
  }
  .typewrapper img,
  h1 {
    grid-area: 1/1;
  }
  .typewrapper h1 {
    padding: 0.5rem;
  }

  .type2 {
    text-align: right;
  }
  .type2 h1 {
    margin-top: auto;
  }
  /* Desktop */
  @media (min-width: 900px) {
  }
</style>

<script>
  // HJÆLP FRA CHAT GPT
  document.addEventListener("DOMContentLoaded", function () {
    const sections = document.querySelectorAll("section");
    let index = 0;

    function scrollToNextSection() {
      // Scroll to the next section
      index = (index + 1) % sections.length;
      sections[index].scrollIntoView({ behavior: "smooth" });
    }

    //kør denne funktion efter 2000 milisekunder
    setTimeout(scrollToNextSection, 2000);
  });
</script>
