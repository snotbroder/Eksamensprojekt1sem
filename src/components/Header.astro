---

<header>
    <nav class="navbar">
        <a href="index.html"><img class="nav-branding" src="/faviconn.svg" alt="logo"></a>
        <ul class="nav-menu">
            <h1>MENU</h1>
            <li class="nav-item"><a href="index.html" class="nav-link active">FORSIDE</a></li>
           <hr>
            <li class="nav-item"><a href="portfolio.html" class="nav-link">PORTFOLIO</a></li>
            <hr>
            <li class="nav-item"><a href="ommig.html" class="nav-link">OM MIG</a></li>
            <hr>
        </ul>
        <div class="hamburger">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </nav>
</header>

<style>
    /*----------menu-------------*/
h1{
    display: none;
}
/*navigationsbar*/
.navbar {
  min-height: 70px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background: var(--header-gradient);
}
header{
    border-bottom: var(--body-contrast) solid 1px;
}
/*menuknapperne i navigationsbar*/
.nav-menu {
  display: flex;
  justify-content: space-around;
  gap: 20px; 
list-style: none;

}
.nav-link{
    color: var(--body-contrast);
    text-decoration: none;
    font-family: montserrat, sans-serif;
  
}
.nav-link:hover{
    border-bottom: solid var(--body-contrast) 1px;
      transition: 0.5s;
    
}
/*logo*/
.nav-branding {
  width: 8ch;
  margin-left: 5px;
}
/*hamburgermenu*/
.hamburger {
  display: none;
  cursor: pointer;
  padding: 2ch;
}
.bar {
  display: block;
  width: 35px;
  height: 2px;
  margin: 8px auto;
  -webkit-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
  background-color: var(--body-contrast);
}
.bar:nth-child(2){
    width: 25px;
   margin: 0;
}
/*-------------mobil---------------*/
@media (max-width: 700px) {
    h1{
    display: inherit;
}
  /*-----------BURGERMENU SETTINGS----------*/
  .hamburger {
    display: block;
  }
  /*de tre streger bliver til et kryds*/
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger.active .bar:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }
  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-10px) rotate(-45deg);
  }
  /*menu settings, standard gør den ikke synlig*/
  .nav-menu {
    position: absolute;
    left: -100%;
    top: 11.4ch;
    gap: 2;
    flex-direction: column;
    background: var(--header-gradient);
    width: 100%;
    text-align: right;
    transition: 0.3s;
    padding: 1.5rem;
    z-index: 11;
    padding-bottom: 90vh;
  }
  h1{
    text-align: left;
  }

  /*kommer frem, når den er active*/
  .nav-menu.active {
    left: 0;
  }

  .nav-link {
    font-size: 1.5rem;
  }
</style>

<script>
    //----------------burgermenu---------------
const hamburger = document.querySelector(".hamburger");
const navmenu = document.querySelector(".nav-menu");
hamburger.addEventListener("click", () => {
  hamburger.classList.toggle("active");
  navmenu.classList.toggle("active");
});
//sikrer at menuknap forsvinder
document.querySelectorAll(".nav-link").forEach((n) =>
  n.addEventListener("click", () => {
    hamburger.classList.remove("active");
    navmenu.classList.remove("active");
  })
);
</script>